 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/homescreen_background"
    android:id="@+id/calllogoptions" > 
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1" >

 	<LinearLayout
 	    android:id="@+id/linearLayout"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:background="@color/homescreen_background"
 	    android:orientation="vertical" >
	    	    
	    <TableLayout
		    android:gravity="center_vertical"
		    android:layout_width="match_parent"
		    android:layout_height="fill_parent"
		    android:paddingLeft="12dp" 
			android:paddingRight="12dp"
			android:paddingTop="12dp" 
			android:paddingBottom="12dp" > 				
			
			<TableRow
			    android:layout_weight="0" 
			    android:gravity="center_vertical" >
			   
				<TextView  
					android:id="@+id/txtContactsName"
					android:text=" "
					android:contentDescription=" "
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
				    android:background="@color/homescreen_background"	
				    android:textColor="@color/card_textcolor_regular"
				    android:textSize="@dimen/card_textsize_phonedialer"    
				    android:focusable="true"
				    android:ellipsize="none"
				    android:scrollHorizontally="false"
				/>		
			</TableRow> 
			
			<TableRow
			    android:layout_weight="0" 
			    android:gravity="center_vertical" >
		
				<TextView  
					android:id="@+id/txtEmpty1"
				    android:text="@string/txtEmpty"			
				    android:layout_width="1px" 
				    android:layout_height="12dp"
				    android:background="@color/homescreen_background"
				    android:focusable="false"
				/>			
			</TableRow>
			
			<TableRow
			    android:layout_weight="1" 
			    android:gravity="center_vertical" >
			   
				<Button  
					android:id="@+id/btnCall"
					android:text="@string/btnCall"
					android:contentDescription="@string/btnCall"
					android:layout_weight="1"
				    android:layout_width="fill_parent" 
				    android:layout_height="match_parent" 
				    android:background="@drawable/card"
				    android:textColor="@drawable/card_textcolor" 
				    android:textStyle="bold"
				    android:textSize="@dimen/card_textsize_regular"
				    android:gravity="center"
					android:focusable="true"
				/>			
			</TableRow> 
			
			<TableRow
			    android:layout_weight="0" 
			    android:gravity="center_vertical" >
		
				<TextView  
					android:id="@+id/txtEmpty2"
				    android:text="@string/txtEmpty"			
				    android:layout_width="1px" 
				    android:layout_height="12dp"
				    android:background="@color/homescreen_background"
				    android:focusable="false"
				/>			
			</TableRow>			
			
			<TableRow
			    android:layout_weight="1" 
			    android:gravity="center_vertical" >
			   
				<Button  
					android:id="@+id/btnSendSMS"
					android:text="@string/btnSendSMS"
					android:contentDescription="@string/btnSendSMS"
					android:layout_weight="1"
				    android:layout_width="fill_parent" 
				    android:layout_height="match_parent" 
				    android:background="@drawable/card"
				    android:textColor="@drawable/card_textcolor" 
				    android:textStyle="bold"
				    android:textSize="@dimen/card_textsize_regular"
				    android:gravity="center"
					android:focusable="true"
				/>	
			</TableRow> 		
						
			<TableRow
			    android:layout_weight="0" 
			    android:gravity="center_vertical" >
		
				<TextView  
					android:id="@+id/txtEmpty4"
				    android:text="@string/txtEmpty"			
				    android:layout_width="1px" 
				    android:layout_height="12dp"
				    android:background="@color/homescreen_background"
				    android:focusable="false"
				/>			
			</TableRow>			
			
			<TableRow
			    android:layout_weight="1" 
			    android:gravity="center_vertical" >
			   
				<Button  
					android:id="@+id/btnViewCallHistory"
					android:text="@string/btnViewCallHistory"
					android:contentDescription="@string/btnViewCallHistory"
					android:layout_weight="1"
				    android:layout_width="fill_parent" 
				    android:layout_height="match_parent" 
				    android:background="@drawable/card"
				    android:textColor="@drawable/card_textcolor" 
				    android:textStyle="bold"
				    android:textSize="@dimen/card_textsize_regular"
				    android:gravity="center"
					android:focusable="true"
				/>	
			</TableRow> 			
			
			<TableRow
			    android:layout_weight="0" 
			    android:gravity="center_vertical" >
		
				<TextView  
					android:id="@+id/txtEmpty5"
				    android:text="@string/txtEmpty"			
				    android:layout_width="1px" 
				    android:layout_height="12dp"
				    android:background="@color/homescreen_background"
				    android:focusable="false"
				/>			
			</TableRow>			
			
			<TableRow
			    android:layout_weight="1" 
			    android:gravity="center_vertical" >
			   
				<Button  
					android:id="@+id/btnDeleteFromLog"
					android:text="@string/btnDeleteFromLog"
					android:contentDescription="@string/btnDeleteFromLog"
					android:layout_weight="1"
				    android:layout_width="fill_parent" 
				    android:layout_height="match_parent" 
				    android:background="@drawable/card"
				    android:textColor="@drawable/card_textcolor" 
				    android:textStyle="bold"
				    android:textSize="@dimen/card_textsize_regular"
				    android:gravity="center"
					android:focusable="true"
				/>	
			</TableRow> 
			
			<TableRow
			    android:layout_weight="0" 
			    android:gravity="center_vertical" >
		
				<TextView  
					android:id="@+id/txtEmpty6"
				    android:text="@string/txtEmpty"			
				    android:layout_width="1px" 
				    android:layout_height="12dp"
				    android:background="@color/homescreen_background"
				    android:focusable="false"
				/>			
			</TableRow>			
			
			<TableRow
			    android:layout_weight="1" 
			    android:gravity="center_vertical" >
			   
				<Button  
					android:id="@+id/btnContact"
					android:text=""
					android:contentDescription=""
					android:layout_weight="1"
				    android:layout_width="fill_parent" 
				    android:layout_height="match_parent" 
				    android:background="@drawable/card"
				    android:textColor="@drawable/card_textcolor" 
				    android:textStyle="bold"
				    android:textSize="@dimen/card_textsize_regular"
				    android:gravity="center"
					android:focusable="true"
				/>	
			</TableRow> 	
			
		</TableLayout> 	    
	</LinearLayout>
  </ScrollView>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:background="@color/navigation_bar_background" 
	    android:layout_weight="0">	
	</LinearLayout>

 	<TableLayout
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_weight="0"
 	    android:gravity="bottom"
 	    android:paddingTop="3dp"
 	    android:stretchColumns="0,2"
 	    android:weightSum="3" >

 	    <TableRow
 	        android:gravity="center_vertical" >

 	        <Button
 	            android:id="@+id/btnNavigationBack"
 	            android:layout_width="0dip"
 	            android:layout_height="50dp"
 	            android:layout_weight="1"
 	            android:background="@color/navigation_bar_background"
 	            android:contentDescription="@string/btnNavigationBack"
 	            android:focusable="true"
 	            android:gravity="center"
 	            android:text="@string/btnNavigationBack"
 	            android:textColor="@color/navigation_bar_textcolor"
 	            android:textSize="@dimen/card_textsize_navigation"
 	            android:textStyle="bold" />

 	        <TextView
 	            android:id="@+id/txtEmpty7"
 	            android:layout_width="12dp"
 	            android:layout_height="match_parent"
 	            android:background="@color/navigation_bar_background"
 	            />

 	        <Button
 	            android:id="@+id/btnNavigationHome"
 	            android:layout_width="0dip"
 	            android:layout_height="match_parent"
 	            android:layout_weight="1"
 	            android:background="@color/navigation_bar_background"
 	            android:contentDescription="@string/btnNavigationHome"
 	            android:focusable="true"
 	            android:gravity="center"
 	            android:text="@string/btnNavigationHome"
 	            android:textColor="@color/navigation_bar_textcolor"
 	            android:textSize="@dimen/card_textsize_navigation"
 	            android:textStyle="bold" />
 	    </TableRow>
 	</TableLayout>
		
</LinearLayout>		