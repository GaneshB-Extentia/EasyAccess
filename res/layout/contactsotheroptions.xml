<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactsotheroptions"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/homescreen_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/homescreen_background"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical" >

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtContactsName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/homescreen_background"
                        android:contentDescription=" "
                        android:ellipsize="none"
                        android:focusable="true"
                        android:padding="10dp"
                        android:scrollHorizontally="false"
                        android:text=" "
                        android:textColor="@color/card_textcolor_regular"
                        android:textSize="@dimen/card_textsize_regular" />
                </TableRow>

                <TableRow
                    android:layout_weight="0"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtEmpty1"
                        android:layout_width="1px"
                        android:layout_height="12px"
                        android:background="@color/homescreen_background"
                        android:focusable="false"
                        android:text="@string/txtEmpty" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:contentDescription="@string/btnDelete"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/btnDelete"
                        android:textColor="@drawable/card_textcolor"
                        android:textSize="@dimen/card_textsize_regular"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_weight="0"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtEmpty2"
                        android:layout_width="1px"
                        android:layout_height="12px"
                        android:background="@color/homescreen_background"
                        android:focusable="false"
                        android:text="@string/txtEmpty" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/btnCopyToSD"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:contentDescription="@string/btnCopyToSD"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/btnCopyToSD"
                        android:textColor="@drawable/card_textcolor"
                        android:textSize="@dimen/card_textsize_regular"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_weight="0"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtEmpty3"
                        android:layout_width="1px"
                        android:layout_height="12px"
                        android:background="@color/homescreen_background"
                        android:focusable="false"
                        android:text="@string/txtEmpty" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical" >
                </TableRow>

                <TableRow
                    android:layout_weight="0"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtEmpty9"
                        android:layout_width="1px"
                        android:layout_height="12px"
                        android:background="@color/homescreen_background"
                        android:focusable="false"
                        android:text="@string/txtEmpty" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/btnImportFromSD"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:contentDescription="@string/btnImportFromSD"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/btnImportFromSD"
                        android:textColor="@drawable/card_textcolor"
                        android:textSize="@dimen/card_textsize_regular"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_weight="0"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtEmpty4"
                        android:layout_width="1px"
                        android:layout_height="12px"
                        android:background="@color/homescreen_background"
                        android:focusable="false"
                        android:text="@string/txtEmpty" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/btnExportToSD"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:contentDescription="@string/btnExportToSD"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/btnExportToSD"
                        android:textColor="@drawable/card_textcolor"
                        android:textSize="@dimen/card_textsize_regular"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/navigation_bar_background"
        android:orientation="vertical" >
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="bottom"
        android:paddingTop="3px"
        android:stretchColumns="0,2"
        android:weightSum="3" >

        <TableRow android:gravity="center_vertical" >

            <Button
                android:id="@+id/btnNavigationBack"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/navigation_bar_background"
                android:contentDescription="@string/btnNavigationBack"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/btnNavigationBack"
                android:textColor="@color/navigation_bar_textcolor"
                android:textSize="@dimen/card_textsize_navigation"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmpty5"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:background="@color/navigation_bar_background" />

            <Button
                android:id="@+id/btnNavigationHome"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/navigation_bar_background"
                android:contentDescription="@string/btnNavigationHome"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/btnNavigationHome"
                android:textColor="@color/navigation_bar_textcolor"
                android:textSize="@dimen/card_textsize_navigation"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</LinearLayout>