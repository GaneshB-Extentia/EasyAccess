<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:drawable="@drawable/card_pressed"></item>

    <item android:state_pressed="false" android:state_selected="true" android:drawable="@drawable/card_focused"></item>
    
    <item android:state_pressed="false" android:state_active="true" android:drawable="@drawable/card_focused"></item>
    
    <item android:state_pressed="false" android:state_focused="true" android:drawable="@drawable/card_focused"></item>

    <item android:drawable="@drawable/card_regular"></item>
</selector>